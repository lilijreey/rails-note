%p#notice= notice

%p
  %b Title:
  = @movie.title
%p
  = image_tag @movie.image.url(:medium)
%p
  %b Description:
  = @movie.description
%p
  %b Movie length:
  = @movie.movie_length
%p
  %b Director:
  = @movie.director
#star{:data => {score: @movie.rating}} Rating:

= link_to 'Edit', edit_movie_path(@movie)
\|
= link_to 'Back', movies_path

:javascript
  $('#star').raty({
  path: '/images/',
  readOnly: true,
  score: function() { return $(this).attr('data-score')}
  })

